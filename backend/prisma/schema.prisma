generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Post {
  id              String      @id @default(auto()) @map("_id") @db.ObjectId

  title           String
  description     String
  price           Int
  city            String
  state           String
  pincode         String
  lat             Float
  lng             Float
  propertyType    String
  bedrooms        Int
  bathrooms       Int
  area            Int
  images          String[]
  listedDate      DateTime    @default(now())
  status          String
  nearbyAmenities Amenities[]
}

type Amenities {
  type             String
  name             String
  address          String
  distance         String
  duration         String
  placeId          String
  rating           Float
  userRatingsTotal Int
}
